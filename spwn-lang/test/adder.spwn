let val1 = 10i
let val2 = 20i

val1.add(11822)
val2.add(23478)

let miniAdd(callback, amount) = {
    val1.is(LARGER_THAN, amount - 1, {
        val1.add(0 - amount)
        val2.add(amount)
        wait(0.03, callback)
    })
}

wait(1, {

    let add = {
        miniAdd(add, 1000)
        miniAdd(add, 100)
        miniAdd(add, 10)
        miniAdd(add, 1)
    }

    add!
})

