
gamescene = import gamescene
my_counter = counter(1i)

a = counter(0)
b = counter(0)

on(gamescene.button_a(), {
    a += 1
})

on(gamescene.button_b(), {
    b += 1
})

on(gamescene.button_a_end(), {
    a -= 1
})

on(gamescene.button_b_end(), {
    b -= 1
})

while_loop(() => true, () {
    if a as @bool {
        my_counter += 1
    } else if b as @bool {
        my_counter -= 1
    }
})